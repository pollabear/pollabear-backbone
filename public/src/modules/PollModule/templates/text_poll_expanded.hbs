<div class="poll unanswered">  <!-- category-{{poll.category}}--shadow"> -->
	<div class="poll-header">

        <div class="poll-header-text poll-header-text-expanded">
            {{poll.text}}
        </div>
    </div>

    <!--  -->
    <!-- {{../poll.category}} -->

    <div class="poll-body">
    {{#each poll.choices}}
		<div class="choice textchoice" data-choiceid="{{this.id}}">
	        <div class="textchoice-overlay category-{{../poll.category}}--background"></div>
	        <div class="textchoice-main textchoice-main-expanded">
	            <div class="textchoice-main-check">
	                <i class="material-icons icon-check">done</i>
	            </div>
	            <div class="textchoice-main-text">
	                {{this.text}}
	            </div>
	            <div class="choice-percent-text choice-percent-text-expanded"> 

	            </div>
	        </div>
		</div>
	{{/each}}
	</div>

	<!--  -->
	<!--  -->

	<div class="poll-footer-data poll-footer-data-expanded">
        <a class="poll-footer-data-category" href="/category/{{poll.category}}">
            {{ upperCase poll.category }}
        </a>
        <span class="poll-footer-data-votes">{{poll.votes}} votes</span>
    </div>

    <div class="poll-footer-actions clearfix">

        <span class="poll-footer-actions-track">
            <i class="material-icons md-24 icon-actions icon-lightgrey">favorite</i>
            <span class="poll-footer-actions-track-number">{{poll.trackCount}}</span>
        </span>


        <span class="poll-footer-actions-comments">
            <i class="material-icons md-24 icon-actions icon-lightgrey">comment</i>
            <span class="poll-footer-actions-comments-number">{{poll.commentCount}}</span>
        </span>

        <div class="dropdown dropup poll-footer-actions-more">
            <span>
                <i class="material-icons md-36 icon-actions icon-lightgrey">more_horiz</i>
            </span>

            <div class="dropdown-content poll-dropup-content clearfix" data-active=false>
                <div class="poll-dropup-content-icon">Share</div>
                <div class="poll-dropup-content-icon">Track</div>
                <div class="poll-dropup-content-icon">Data</div>
                <div class="poll-dropup-content-icon">Report</div>
            </div>
        </div>

    </div>

</div>